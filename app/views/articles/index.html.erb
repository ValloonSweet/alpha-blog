<h1>All articles</h1>
<p>
    <%= link_to "Create new article", new_article_path %>
</p>

<table>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.id %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td>
                <%= link_to 'Edit', edit_article_path(article) %>&nbsp
                <%= link_to 'Show', article_path(article) %>&nbsp
                <%= link_to 'Delete', article_path(article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"}
                %>
            </td>
        </tr>
    <% end %>
</table>
