<h2 align="center">Title: <%= @article.title %></h2>

<div class="well col-sm-8 offset-sm-2">
    <div class="center">
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 offset-md-4">
                    <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
                    <li class="article-title">
                        <%= link_to @article.user.username, user_path(@article.user) %>
                    </li>
                    <li><small><%= pluralize(@article.user.articles.count, "article") if @article.user.articles %></small></li>
                </div>
            </div>
        </ul>
    </div>

    <h4 class="center"><strong>Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>
    <div class="article-actions">
        <%= link_to 'Edit this article', edit_article_path(@article), class: "btn btn-primary" %>
        <%= link_to 'Delete this article',
            article_path(@article),
            data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure you want to delete the artcle?"
            },
            class: "btn btn-danger"
        %>
        <%= link_to 'Back to article listing', articles_path, class: "btn btn-success" %>
    </div>
</div>
