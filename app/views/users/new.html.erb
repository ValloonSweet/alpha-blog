<h1 align="center">Signup for Alpha Blog</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row mt-1">
    <%= form_for @user do |f| %>
        <div class="mb-4 row">
            <div class="col-sm-2">
                <%= f.label :username, class: "col-form-label" %>
            </div>
            <div class="col-sm-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true%>
            </div>
        </div>
        <div class="mb-4 row">
            <div class="col-sm-2">
                <%= f.label :email, class: "col-form-label" %>
            </div>
            <div class="col-sm-10">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
            </div>
        </div>
        <div class="mb-4 row">
            <div class="col-sm-2">
                <%= f.label :password, class: "col-form-label" %>
            </div>
            <div class="col-sm-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
            </div>
        </div>
        <div class="mb-4 row">
            <div class="offset-sm-2 col-sm-10">
                <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
            </div>
        </div>

    <% end %>
    <div class="col-sm-4 offset-sm-4">
        [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>
</div>
